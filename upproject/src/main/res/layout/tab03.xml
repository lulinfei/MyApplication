<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#333333"
              android:orientation="vertical">

    <TextView
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用电管家服务账户设置"
        android:textSize="22sp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入管理员密码："
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_access"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"/>
    <TextView
        android:id="@+id/tishi1"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入账号及密码："
        android:textSize="15sp"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#ffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="13sp"
            />
        <EditText
            android:id="@+id/add_user"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_pass"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#ffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="13sp"
            />
        <EditText
            android:id="@+id/add_key"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_add"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加账号"/>
    <TextView
        android:id="@+id/tishi2"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入要删除账号及其密码："
        android:textSize="20sp"
        />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_name2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#ffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textSize="13sp"
            />
        <EditText
            android:id="@+id/delete_user"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_pass2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="#ffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textSize="13sp"
            />
        <EditText
            android:id="@+id/delete_key"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:visibility="gone"
        android:id="@+id/btn_delete"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除账号"/>

</LinearLayout>
